{
  "manifest_version": 2,

  "name": "angery mom savings extension",
  "description": "This extension will text your mom/gf/dog/goldfish if you spend money on dumb stuff",
  "version": "0.1",

  "browser_action": {
   "default_icon": "icon2.png",
   "default_popup": "popup.html",
   "default_title": "A N G E R Y"
  },

  "content_scripts": [
    {
      "matches": ["*://*.amazon.com/gp/cart/*"],
      "css" : ["styles/modal.css"],
      "js": ["scripts/jquery.js", "scripts/modal.js", "scripts/contentscript.js"]
    }
  ],

  "permissions": [
    "tabs", "webNavigation", "*://*.amazon.com/*"
  ]
}
