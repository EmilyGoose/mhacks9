{
  "manifest_version": 3,

  "name": "3-Click Ordering",
  "description": "This extension will text your mom/gf/dog/goldfish if you spend money on dumb stuff",
  "icons":{
      "16": "icons/icon16.png",
      "19": "icons/icon.png",
      "48": "icons/icon48.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png"
  },

  "version": "0.5",

  "browser_action": {
   "default_icon": {
       "16": "icons/icon16.png",
       "19": "icons/icon.png",
       "48": "icons/icon48.png",
       "64": "icons/icon64.png",
       "128": "icons/icon128.png"
   },
   "default_popup": "popup.html",
   "default_title": "3-Click Ordering"
  },

  "content_scripts": [
    {
      "matches": ["*://*.amazon.com/*"],
      "css" : ["styles/modal.css", "styles/contentstyle.css"],
      "js": ["scripts/jquery.js", "scripts/modal.js", "scripts/contentscript.js"]
    }
  ],

  "options_page": "options.html",

  "permissions": [
    "tabs",
    "webNavigation",
    "*://*.amazon.com/*",
    "storage"
  ],
  "web_accessible_resources": ["icons/*"]
}
